<!--pages/add/add.wxml-->

<!-- Banner -->
<view class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    <view class="banner-content">
      <view class='title'>Add a book</view>
      <text class='teaser'>Turn my shelves to library</text>
      
    </view>
  </view>
<!-- Banner -->


<form bindsubmit="bindSubmit">
    <view class="user-input">
     <view class="text-area-wrap">
      <textarea placeholder="Title" value="{{userInfo.nickName}}" name="title" auto-height />
     </view>
    </view>
    <view class="user-input">
     <view class="text-area-wrap">
      <textarea placeholder="Author" value="{{userInfo.nickName}}" name="author" auto-height />
     </view>
    </view>
    <view class="user-input">
     <view class="text-area-wrap">
      <textarea style="input-size" placeholder="Book Summary" class="input-height" name="description" maxlength="-1" />
     </view>
    </view>
    <button class="btn btn-primary" bindtap="uploadCoverImage" >Upload Cover Image</button>
    <button class="submit-button" form-type="submit" >Submit</button>
    <button class="cancel-button" type="primary" bindtap="goMybooks">Cancel</button>
</form>
  
