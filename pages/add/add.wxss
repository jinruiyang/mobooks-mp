/* pages/add/add.wxss */
/* Banner Component */
.banner {
    color: white;
    text-align: center;
    height: 40vh;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 5px;
  }
  .title {
    font-family: Georgia, 'Times New Roman', Times, serif;
    letter-spacing: 1px;  
    font-size: 34px;
    margin-bottom: 7px; 
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }
  .teaser {
    font-size: 16px;
    font-weight: lighter;
    color: rgb(255, 255, 255);
    opacity: 0.6;
    margin-bottom: 30px;
  }
  .margin {
    margin-top: 20px;
  }
/* Banner Component */


/* Card Component */
.card-outer-border {
    margin: 10px;
    border: 0.5px solid rgb(145, 145, 145);
    border-radius: 10px;
  }
  
  .card-header-item {
    background-color: rgb(145, 145, 145);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    padding: 15px;
    color: white;
    font-size: 14px;
  }
  
  .card-line {
    border-top: 0.5px solid rgb(145, 145, 145);
  }
  
  .card-body-item {
    padding: 15px;
    color: rgb(73, 73, 73);
    font-size: 16px;
    text-align: center;
  }
  
