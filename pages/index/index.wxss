/* search form style */
   .user-input {
     width: 95%;
     /* margin-bottom: 35rpx; */
    margin: 0 auto;
    padding-bottom: 5px;
   }
   .input-height {
     height: 10em;
   }
   .input-label {
     font-size: 35rpx;
   }
   textarea {
     padding: 10rpx 0;
     font-size: 35rpx;
     width: 100%;
   }
   .text-area-wrap {
     padding: 15rpx 15rpx;
     background-color: #fff;
     margin-top:8px;
     border-radius: 5px;
     border:3px solid #FC6059;
     box-shadow:0px 1.5px #E0E0E0;
   }

.book_library {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: row;
  justify-content: space-around;
}
.grey-card {
  width: 165px;
  height: 220px;
  background-color: #F3F1F1;
  margin-bottom: 20px;
}
.book-image {
  width: 130px;
  height: 170px;
  margin: 0 auto;
  margin-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;  
}
.card-category {
  font-size: 12px;
  text-align: left;
  margin-left: 20px;
  margin-right: 20px;
  line-height: 40%;
  color: #333744;
}

