<!--pages/mybooks/mybooks.wxml-->
<view class="top-banner">
  <view class="top-cover-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.3) 50%), url('https://images.unsplash.com/photo-1525358180237-7399f908a1d9?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cfe3e42d357e6c5c91700e5062452958&auto=format&fit=crop&w=1357&q=80');" >THE BOOKS I'M LENDING
  </view>
  <view class="book-list-lending">
    <view class="book-summary-info">
      <view><text class="book-title">{{book.title}}</text></view>
      <!-- <view><image class="user-edits"   src="/image/editpink.png" ></image></view> -->
    </view>
  </view>
</view>

<view class="bottom-banner">
  <view class="bottom-cover-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.3) 50%), url('https://images.unsplash.com/photo-1525358180237-7399f908a1d9?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cfe3e42d357e6c5c91700e5062452958&auto=format&fit=crop&w=1357&q=80');" >THE BOOKS I'M BORROWING
  </view>
  <view class="book-list-lending">
    <view class="book-summary-info">
      <text class="book-title">{{book.title}}</text>
    </view>
  </view>
</view>
<!--blank item for padding item from bottom  -->
<view class='blank-item'></view>

<view class='nav'>
  <view class='salmon-container'>
      <view class='extend-padding' bindtap="goHome">
      <image class="avatar-tab"   src="/image/group.png" ></image> 
      </view>
      <view class='extend-padding' bindtap="goAdd">
      <image class="avatar-tab"   src="/image/post3.png" ></image> 
      </view> 
      <view class='extend-padding' bindtap="goMybooks">
      <image class="avatar-tab"   src="/images/open-book.svg" ></image> 
      </view>
  </view>
</view>



