.top-banner {
  position: relative;
}
.bottom-banner {
  position: relative;
}
.top-cover-banner {
    color: white;
    text-align: center;
    height: 60px;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    width:100vw;
}
.bottom-cover-banner {
    color: white;
    text-align: center;
    height: 60px;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    width:100vw;
}
.book-summary-info {
  display: flex;
  flex-direction: row;
  width: 360px;
  height: 40px;
  margin: 0 auto;
  margin-top: 5px;
  border:1px solid #F3F1F1; 
  background-color: #F3F1F1; 

}
 .book-title {
  font-size: 16px;
  font-weight:bold;
  font-family:open sans light;
  position: absolute;
  margin-top: 10px;
  margin-left: 5px;
  width: 50%;
} 
.book-list-lending {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top:2.5px;
  margin-bottom:30px;
}
.user-edits {
  width: 25px;
  height: 25px;
  margin-left: 250px;
}
 
 
